rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development-friendly rules: authenticated clients can read/write under `users`.
    // IMPORTANT: restrict these rules before production.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
